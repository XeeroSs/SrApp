<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/color_blue_dark_eye"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/leader_board_cell_place"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/leader_board_cell_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/leader_board_cell_difference_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/leader_board_cell_speedrunner_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white" />

</LinearLayout>