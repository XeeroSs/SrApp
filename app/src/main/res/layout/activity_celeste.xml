<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_with_status_bar"
        android:background="@drawable/shape_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/header_content_start"
            android:layout_marginTop="@dimen/header_content_top_with_status_bar"
            android:layout_marginEnd="@dimen/header_content_end"
            android:layout_marginBottom="@dimen/header_content_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/shape_layout"
                android:layout_width="@dimen/header_image_size"
                android:layout_height="@dimen/header_image_size"
                android:background="@drawable/shape_image_header">

                <ImageView
                    android:id="@+id/activity_game_details_image_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/header_text_start"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_light"
                    android:maxLines="1"
                    android:text="Text qui sert de test"
                    android:textColor="@color/on_surface_header"
                    android:textSize="@dimen/header_text_size_title" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/header_space_between_texts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_light"
                    android:maxLines="1"
                    android:text="Text qui sert de test 2"
                    android:textColor="@color/on_surface_header_variant"
                    android:textSize="@dimen/header_text_size_label" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/header_space_between_texts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_light"
                    android:maxLines="1"
                    android:text="Text qui sert de test 3"
                    android:textColor="@color/on_surface_header_variant"
                    android:textSize="@dimen/header_text_size_label" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/surface"
        app:elevation="10dp"
        app:itemRippleColor="@color/on_surface_variant"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>