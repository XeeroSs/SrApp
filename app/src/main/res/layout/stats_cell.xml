<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/stats_cell_height"
    android:layout_marginStart="@dimen/stats_cell_space"
    android:layout_marginTop="@dimen/stats_cell_space"
    android:layout_marginEnd="@dimen/stats_cell_space"
    android:layout_marginBottom="@dimen/stats_cell_space">

    <TextView
        android:id="@+id/stats_cell_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy_light"
        android:maxLines="1"
        android:text="11"
        android:textColor="@color/on_background"
        android:textSize="@dimen/stats_cell_text_size_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stats_cell_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy_light"
        android:maxLines="1"
        android:text="Total de runs"
        android:textColor="@color/on_background"
        android:textSize="@dimen/stats_cell_text_size_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>